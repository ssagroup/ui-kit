{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": false,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types",
      "../../node_modules/@types"
    ],
    "paths": {
      "@apis/*": ["./src/apis/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@components/*": ["./src/components/*"]
    }
  },
  "include": ["src/**/*", "./jest-setup.ts", "./customTest.tsx"],
  "exclude": ["dist/**/*"]
}
