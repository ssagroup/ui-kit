{
  "name": "@ssa-ui-kit/ui-kit-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "SSA UI Kit",
  "main": "index.js",
  "author": "SSA Group",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ignore-path .gitignore .",
    "build:all": "pnpm build:utils && pnpm build:hooks && pnpm build:core && pnpm build:widgets",
    "build:utils": "pnpm --filter ./packages/utils build",
    "build:hooks": "pnpm --filter ./packages/hooks build",
    "build:core": "pnpm --filter ./packages/core build",
    "build:widgets": "pnpm --filter ./packages/widgets build",
    "lint:styles": "stylelint \"**/*.tsx\"",
    "spellcheck": "cspell \"**/*.{tsx,ts,md}\" --show-suggestions --no-progress",
    "test": "jest -i --no-cache",
    "test:coverage": "jest -i --no-cache --coverage",
    "test:e2e": "pnpm test:core:e2e && pnpm test:widgets:e2e",
    "test:core": "jest -i --no-cache --selectProjects \"UI Kit Core\"",
    "test:utils": "jest -i --no-cache --selectProjects \"UI Kit Utils\"",
    "test:hooks": "jest -i --no-cache --selectProjects \"UI Kit Hooks\"",
    "test:widgets": "jest -i --no-cache --selectProjects \"UI Kit Widgets\"",
    "test:fitness": "echo 'TODO'",
    "test:clearcache": "jest --clearCache",
    "test:core:e2e": "pnpm --filter ./packages/core test:e2e",
    "test:core:e2e:ui": "pnpm --filter ./packages/core test:e2e:ui",
    "test:core:e2e:debug": "pnpm --filter ./packages/core test:e2e:debug",
    "test:widgets:e2e": "pnpm --filter ./packages/widgets test:e2e",
    "test:widgets:e2e:ui": "pnpm --filter ./packages/widgets test:e2e:ui",
    "test:widgets:e2e:debug": "pnpm --filter ./packages/widgets test:e2e:debug",
    "sb:dev": "storybook dev -p 6001",
    "sb:dev:quiet": "storybook dev -p 6001 --quiet",
    "sb:utils": "pnpm --filter ./packages/utils sb:dev",
    "sb:hooks": "pnpm --filter ./packages/hooks sb:dev",
    "sb:core": "pnpm --filter ./packages/core sb:dev",
    "sb:widgets": "pnpm --filter ./packages/widgets sb:dev",
    "sb:build:root": "STORYBOOK_ENV=production storybook build",
    "sb:build:core": "pnpm --filter ./packages/core sb:build",
    "sb:build:widgets": "pnpm --filter ./packages/widgets sb:build",
    "sb:deploy:root": "vercel --prod",
    "sb:deploy:fitness": "pnpm sb:build:widgets && firebase deploy --only hosting:fitness",
    "sb:deploy:core": "pnpm sb:build:core && firebase deploy --only hosting:core",
    "deploy:dashboard": "pnpm --filter ./examples/fitness-dashboard build && firebase deploy --only hosting:fitness-dashboard",
    "prepare": "husky install",
    "prettier:check": "npx prettier . --check",
    "prettier:write": "npx prettier . --write"
  },
  "keywords": [
    "react",
    "design system",
    "ui"
  ],
  "devDependencies": {
    "@babel/core": "7.24.6",
    "@babel/plugin-transform-runtime": "^7.24.6",
    "@babel/preset-env": "^7.24.6",
    "@babel/preset-react": "^7.24.6",
    "@babel/preset-typescript": "^7.24.6",
    "@babel/runtime": "7.24.6",
    "@emotion/babel-plugin": "^11.11.0",
    "@emotion/babel-preset-css-prop": "^11.11.0",
    "@emotion/jest": "^11.11.0",
    "@nivo/line": "0.83.0",
    "@playwright/test": "^1.44.1",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.13",
    "@storybook/addon-actions": "^7.3.2",
    "@storybook/addon-docs": "^7.3.2",
    "@storybook/addon-essentials": "^7.3.2",
    "@storybook/addon-interactions": "^7.3.2",
    "@storybook/addon-links": "^7.3.2",
    "@storybook/addon-mdx-gfm": "^7.3.2",
    "@storybook/manager-api": "^7.4.6",
    "@storybook/react": "^7.3.2",
    "@storybook/react-webpack5": "^7.3.2",
    "@storybook/testing-library": "^0.2.0",
    "@storybook/theming": "^7.4.6",
    "@storybook/types": "^7.3.2",
    "@testing-library/dom": "^10.1.0",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/ramda": "^0.30.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^12.0.2",
    "cspell": "^8.8.3",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-storybook": "^0.6.13",
    "firebase": "^10.12.1",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^15.2.4",
    "lost-pixel": "3.16.0",
    "postcss-styled-syntax": "^0.6.4",
    "prettier": "^3.2.5",
    "ramda": "^0.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-refresh": "^0.14.2",
    "react-router-dom": "^6.23.1",
    "react-test-renderer": "^18.3.1",
    "resize-observer-polyfill": "^1.5.1",
    "storybook": "^7.3.2",
    "storybook-addon-pseudo-states": "^2.1.1",
    "stylelint": "^16.6.0",
    "stylelint-config-standard": "^36.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-jest": "^29.1.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  }
}
