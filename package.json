{
  "name": "@ssa-ui-kit/ui-kit-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "SSA UI Kit",
  "main": "index.js",
  "author": "SSA Group",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ignore-path .gitignore .",
    "build:all": "pnpm build:utils && pnpm build:hooks && pnpm build:core && pnpm build:widgets",
    "build:utils": "pnpm --filter ./packages/utils build",
    "build:hooks": "pnpm --filter ./packages/hooks build",
    "build:core": "pnpm --filter ./packages/core build",
    "build:widgets": "pnpm --filter ./packages/widgets build",
    "lint:styles": "stylelint \"**/*.tsx\"",
    "spellcheck": "cspell \"**/*.{tsx,ts,md}\" --show-suggestions --no-progress",
    "test": "jest -i --no-cache",
    "test:core": "pnpm --filter ./packages/core test",
    "test:utils": "jest -i --no-cache --selectProjects \"UI Kit Utils\"",
    "test:hooks": "jest -i --no-cache --selectProjects \"UI Kit Hooks\"",
    "test:widgets": "jest -i --no-cache --selectProjects \"UI Kit Widgets\"",
    "test:fitness": "echo 'TODO'",
    "test:clearcache": "jest --clearCache",
    "sb:dev": "storybook dev -p 6001",
    "sb:utils": "pnpm --filter ./packages/utils sb:dev",
    "sb:hooks": "pnpm --filter ./packages/hooks sb:dev",
    "sb:core": "pnpm --filter ./packages/core sb:dev",
    "sb:build:root": "STORYBOOK_ENV=production storybook build",
    "sb:deploy:root": "vercel --prod",
    "sb:deploy:fitness": "pnpm --filter ./packages/widgets sb:build && firebase deploy --only hosting:fitness",
    "sb:deploy:core": "pnpm --filter ./packages/core sb:build && firebase deploy --only hosting:core",
    "deploy:dashboard": "pnpm --filter ./examples/fitness-dashboard build && firebase deploy --only hosting:fitness-dashboard",
    "prepare": "husky install"
  },
  "keywords": [
    "react",
    "design system",
    "ui"
  ],
  "devDependencies": {
    "@babel/core": "7.21.5",
    "@babel/plugin-transform-runtime": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@babel/runtime": "7.21.5",
    "@emotion/babel-plugin": "^11.10.5",
    "@emotion/babel-preset-css-prop": "^11.10.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
    "@storybook/addon-actions": "^7.1.0",
    "@storybook/addon-docs": "^7.1.0",
    "@storybook/addon-essentials": "^7.1.0",
    "@storybook/addon-interactions": "^7.1.0",
    "@storybook/addon-links": "^7.1.0",
    "@storybook/addon-mdx-gfm": "^7.1.0",
    "@storybook/react": "^7.1.0",
    "@storybook/react-webpack5": "^7.1.0",
    "@storybook/testing-library": "^0.2.0",
    "@storybook/types": "^7.1.0",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "@types/react": "^18.2.8",
    "@types/react-dom": "^18.2.4",
    "@types/testing-library__jest-dom": "^5.14.6",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "babel-jest": "^29.3.1",
    "babel-loader": "^9.1.2",
    "copy-webpack-plugin": "^11.0.0",
    "cspell": "^6.31.2",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-storybook": "^0.6.12",
    "firebase": "^9.22.1",
    "html-webpack-plugin": "^5.5.1",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "jest-cli": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^13.2.3",
    "postcss-styled-syntax": "^0.4.0",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-refresh": "^0.14.0",
    "react-router-dom": "^6.11.2",
    "react-test-renderer": "^18.2.0",
    "resize-observer-polyfill": "^1.5.1",
    "storybook": "^7.1.0",
    "stylelint": "^15.10.2",
    "stylelint-config-standard": "^34.0.0",
    "terser-webpack-plugin": "^5.3.9",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.1",
    "webpack-dev-server": "^4.15.0"
  }
}
