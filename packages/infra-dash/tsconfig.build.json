{
  "compilerOptions": {
    "incremental": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "allowJs": true,

    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "es6",
    "module": "esnext",
    "noImplicitAny": false,
    "jsxImportSource": "@emotion/react",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "lib": ["dom", "dom.iterable", "esnext"],

    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./tsbuildcache",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types",
      "../../node_modules/@types"
    ],
     "paths": {
      "@shared/*": ["./src/shared/*"],
      "@components/*": ["./src/components/*"],
      "@entities/*": ["./src/entities/*"],
      "@features/*": ["./src/features/*"],
    }
  },

  "include": ["src/**/*"],
  "exclude": [
    "dist/**/*",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.specBackup.ts",
    "src/**/*.specBackup.tsx",
    "src/**/*.e2e.ts",
    "src/**/*.e2e.tsx",
    "src/**/*.stories.tsx",
    "src/**/*.stories.ts",
    "src/**/*.stories-extra.tsx",
    "src/**/*.stories-extra.ts"
  ]
}
