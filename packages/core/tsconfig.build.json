{
  "compilerOptions": {
    "incremental": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": false,

    "strict": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "es6",
    "module": "esnext",
    "noImplicitAny": false,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "resolveJsonModule": true,
    "lib": ["dom", "dom.iterable", "esnext"],

    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./tsbuildcache",
    "typeRoots": [
      "./src/types",
      "./src/types/emotion.d.ts",
      "./src/types/global.d.ts",
      "./node_modules/@types",
      "../../node_modules/@types"
    ],
    "paths": {
      "@components": ["./src/components/index"],
      "@components/*": ["./src/components/*"],
      "@themes/*": ["./src/themes/*"],
      "@styles/*": ["./src/styles/*"],
      "@global-types/*": ["./src/types/*"]
    }
  },

  "include": ["src/**/*"],
  "exclude": [ 
    "dist/**/*",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.stories.tsx",
    "src/**/*.stories.ts"
  ]
}
