{
  "name": "@ssa-ui-kit/core",
  "version": "0.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "sideEffects": false,
  "author": "SSA Group",
  "license": "MIT",
  "description": "SSA UI Kit",
  "keywords": [
    "react",
    "SSA UI Kit",
    "ui"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ssagroup/ui-kit.git",
    "directory": "packages/core"
  },
  "dependencies": {
    "@emotion/core": "^11.0.0",
    "@emotion/css": "^11.11.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@floating-ui/react": "0.22.0",
    "@ssa-ui-kit/hooks": "workspace:^",
    "@ssa-ui-kit/utils": "workspace:^",
    "dotenv": "^16.0.3",
    "js-tokens": "^4.0.0",
    "loose-envify": "^1.4.0",
    "react-hook-form": "^7.43.8",
    "scheduler": "^0.23.0",
    "uuid": "^9.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "./jest-setup.ts"
    ],
    "transform": {
      "^.+\\.(j|t)sx?$": "babel-jest"
    },
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/components/Icon/icons/",
      "<rootDir>/dist/"
    ],
    "moduleNameMapper": {
      "^@components(.*)$": "<rootDir>/src/components$1",
      "^@themes(.*)$": "<rootDir>/src/themes$1",
      "^@styles/(.*)$": "<rootDir>/src/styles/$1",
      "^@types/(.*)$": "<rootDir>/src/types/$1"
    }
  },
  "scripts": {
    "test": "jest -i --no-cache",
    "build": "webpack --mode=production --node-env=production && tsc --build --force ./tsconfig.build.json",
    "sb:dev": "storybook dev -p 6006",
    "sb:build": "storybook build",
    "ts-show-config-build": "tsc --showConfig -p ./tsconfig.build.json",
    "ts-show-config": "tsc --showConfig -p ./tsconfig.json",
    "ts-check": "tsc --noEmit -p ./tsconfig.json",
    "ts-check-build": "tsc -p ./tsconfig.build.json"
  },
  "browserslist": [
    ">0.1%",
    "not dead",
    "not op_mini all"
  ],
  "devDependencies": {
    "@emotion/jest": "^11.11.0",
    "@testing-library/jest-dom": "^4.2.4",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.85.0"
  },
  "peerDependencies": {
    "@emotion/core": "^11.0.0",
    "@emotion/css": "^11.11.0",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "react": "18.x",
    "react-dom": "18.x"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  }
}
